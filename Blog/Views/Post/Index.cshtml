@model Blog.Models.AllPostsViewModel

@{
    ViewBag.Title = "All Posts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h1>Auto Blog</h1>
    <p class="lead">Mayfly residue is delaying 2021 Chevrolet Tahoe, GMC Yukon shipments.</p>
</div>

<h2>
    All Posts
    @* @Html.ActionLink("Add New Article", "Create", "Article", null, new { @class = "btn btn-danger align-right" }) *@
</h2>

<div class="main">
    <div class="row">
    @foreach (var article in Model.Posts)
    {
        <a href="/Post/Details/@article.Id" class="card col-sm-6 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3>@article.Title</h3>
                    <h5>@article.Author.FullName (<em>@article.PublishDate.ToShortDateString()</em>)</h5>
                    <img src="@article.Image" alt="#">
                    <p>@article.Discription</p>
                </div>
            </div>
        </a>
    }
    </div>
</div>
